create database retrogroove;

-- tabla de productos
create table productos 
(id SERIAL primary key, titulo VARCHAR(50), 
formato VARCHAR(10), imagen VARCHAR(200), precio INTEGER)

-- tabla de usuarios
create table usuarios (id Serial primary key, nombre VARCHAR(50), email VARCHAR (100))

-- tabla intermedia, likes de usuarios
create table usuarios_likes (id_productos INTEGER references productos (id), 
id_usuarios INTEGER references usuarios (id))

